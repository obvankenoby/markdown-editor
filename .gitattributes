 # Auto detect text files and perform LF normalization
  * text=auto

  # Force LF for text files
  *.ts text eol=lf
  *.tsx text eol=lf
  *.js text eol=lf
  *.jsx text eol=lf
  *.json text eol=lf
  *.md text eol=lf
  *.css text eol=lf
  *.html text eol=lf
  *.yml text eol=lf
  *.yaml text eol=lf

  # Force CRLF for Windows-specific files
  *.bat text eol=crlf
  *.cmd text eol=crlf

  # Binary files
  *.png binary
  *.jpg binary
  *.jpeg binary
  *.gif binary
  *.ico binary
  *.woff binary
  *.woff2 binary
